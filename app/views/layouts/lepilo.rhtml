<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
 "http://www.w3.org/TR/html4/strict.dtd">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8">
  <title><%= controller.controller_name %> &raquo; <%= controller.action_name %></title>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "scriptaculous" %> 
  <%= javascript_include_tag "lightbox" %> 
  <%= javascript_include_tag "slider" %> 
  <%= javascript_include_tag "tabs" %> 
  <%= javascript_include_tag "accordion"%> 
  <%= stylesheet_link_tag 'lepilo'%>
  <%= stylesheet_link_tag 'lightbox'%>
  <%= stylesheet_link_tag 'lplaccordionmenu'%>
  <%= stylesheet_link_tag 'lplcssmenu'%>
</head>
<body>
  <% 
    flashimg = '...'
    
    flash.each do |key, msg|
     case key
        when :ok
          flashimg = '<img src="/images/railsflash-ok.png"/>'
        when :info
          flashimg = '<img src="/images/railsflash-info.png"/>'
        when :warning
          flashimg = '<img src="/images/railsflash-warning.png"/>'
        when :error
          flashimg = '<img src="/images/railsflash-error.png"/>'
      end %>

    <%= content_tag :div, flashimg + '<div>' + msg + '</div>', :id => key %>
    <script type="text/javascript" charset="utf-8">
      setTimeout( function() {
        new Effect.BlindUp('<%= key %>', 500);
      }, 3000)
    </script>
  <% end %>

  <div id="lplcontent">
    
    <div id="navigation">
      <img src="/images/lepilo.png" class="lepilo" alt="lepilo version" />
      <a href="/settings/" <%= 'class="active"' if params[:controller] == "settings"%>><img src="/images/overview.png" alt="overview" /></a>
      <!--<a href="/" <%= 'class="active"' if params[:controller] == ""%>><img src="/images/overview.png" border=0></a>-->
      <a href="/articles/" <%= 'class="active"' if params[:controller] == "articles"%>><img src="/images/articles.png" alt="articles" /></a>
      <a href="/notes/" <%= 'class="active"' if params[:controller] == "notes"%>><img src="/images/notes.png" alt="notes"/></a>
      <a href="/comments/" <%= 'class="active"' if params[:controller] == "comments"%>><img src="/images/posts.png" alt="posts"/></a>
      <a href="/galleries/" <%= 'class="active"' if params[:controller] == "galleries"%>><img src="/images/galleries.png" alt="galleries"/></a>
      <a href="/topics/" <%= 'class="active"' if params[:controller] == "topics"%>><img src="/images/navigation.png" alt="navigation"/></a>
      <a href="/mediablocks/" <%= 'class="active"' if params[:controller] == "mediablocks"%>><img src="/images/media.png" alt="media"/></a>
      <a href="/account/" <%= 'class="active"' if params[:controller] == "account"%>><img src="/images/accounts.png" alt="accounts"/></a>
      <a href="/account/logout" ><img src="/images/logout.png" alt="log out of lepilo"/></a>
    </div>

  <%= @content_for_layout %>
    
  </div>

  <div id="lplfooter">
  <strong>LEPILO</strong> Statistik
    <strong><span class="green">
    <%
      article_counter = Article.count
      gallery_counter = Gallery.count
      text_counter = BlockLink.count(:conditions => "textblock_id")
      media_counter = BlockLink.count(:conditions => "mediablock_id") %>  
    <%= image_tag "/images/16article.png",
        :alt => "anzahl der seiten", 
        :title => "anzahl der seiten", 
        :class => "icon16"  %>
    <%= article_counter %>
    <%= image_tag "/images/16gallery.png",
        :alt => "anzahl der galerien", 
        :title => "anzahl der galerien", 
        :class => "icon16"  %>
    <%= gallery_counter %>
    <%= image_tag "/images/16image.png",
        :alt => "anzahl der medienblocks", 
        :title => "anzahl der medienblocks", 
        :class => "icon16"  %>
    <%= media_counter %>
    <%= image_tag "/images/16text.png",
        :alt => "anzahl der textblocks", 
        :title => "anzahl der textblocks", 
        :class => "icon16"  %>
    <%= text_counter %>
      </span></strong>
      <% if @session['user'] %>
      &nbsp;&nbsp;|&nbsp;&nbsp; Angemeldet als
      <strong><span class="green"><%= @session['user'].login %></span></strong>
      &nbsp;&nbsp;|&nbsp;&nbsp;
      <% end %>
  </div>

</body>
</html>
