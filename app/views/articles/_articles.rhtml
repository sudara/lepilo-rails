	<div class="listblock" id="<%= articles.id %>">
    <%  thumbnail = Mediablock.find_by_id(articles.thumbnail_id) %>
    <% if thumbnail %>
      <%= image_tag "/data/thumbnails/#{thumbnail.filename}",
          :alt => thumbnail.title, 
          :title => thumbnail.title, 
          :class => "listthumbnail"  %>
    <% else %>
      <%= image_tag "/images/rails.png",
          :class => "listthumbnail" %>
    <% end %>
  	<div class="iconwhite" id="plastic_<%= articles.id %>">
      <div class="icontainer">
        <div class="icontainer" style="margin-right:5px">
          <% if articles.released %>
          <%= image_tag "/images/16unlocked.png",
              :alt => "freigegeben", 
              :title => "freigegeben", 
              :class => "linkicon"  %>
          <% else %>
          <%= image_tag "/images/16locked.png",
              :alt => "nicht freigegeben", 
              :title => "nicht freigegeben", 
              :class => "linkicon"  %>
          <% end %>
        </div>
        <%= link_to image_tag("/images/w24edit.png", :title => 'bearbeiten', :alt => 'bearbeiten'), { :action => 'edit', :id => articles, :page => params[:page] }, :class => 'linkicon' %>
        <%= link_to image_tag("/images/w24delete.png", :title => 'löschen', :alt => 'löschen'), { :action => 'destroy', :id => articles, :page => params[:page] }, :class => 'linkicon', :confirm => 'Artikel »' + articles.title + '« löschen — sind Sie sicher?' %>          
      </div>
  	</div>
	  <div class="listdescription">
    <h3><%= articles.title %></h3><br/>
    <span class="smalltext">
	  <strong><%= articles.reference %></strong>,
      <%= image_tag "/images/16image.png",
          :alt => "anzahl der medienblocks", 
          :title => "anzahl der medienblocks", 
          :class => "icon16"  %>
      <%= articles.count_media %>,    
      <%= image_tag "/images/16text.png",
          :alt => "anzahl der textblocks", 
          :title => "anzahl der textblocks", 
          :class => "icon16"  %>
      <%= articles.count_text %>
    </span><br/>
	  <%=h articles.description %>
	</div>
</div>