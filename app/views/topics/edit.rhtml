<h1>Navigassstionspunkt &raquo; <span class="gray"><%= @topic.title %></span> &laquo; bearbeiten</h1><br/>
<%= error_messages_for 'topic' %>
<div id="lploptions">
  <div id="entrySettings" >
    <%= start_form_tag :action => 'update', :id => @topic %>
      <%= render :partial => 'edit' %><br/>
      <%= submit_tag 'Speichern' %><br/>
    <%= end_form_tag %>
  </div>
</div>
<div id="lplheader">
</div>

<div id="lplcontainer">
<%= link_to 'Zur&uuml;ck', :action => 'list' %>
</div>

<%= sortable_element 'lpltopic-list' , 
  :url => { :action => "sort", :id => @topic }, 
  :complete => visual_effect(:highlight, 'lpltopic-list' ) 
%>

